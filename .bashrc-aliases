shopt -s expand_aliases
shopt -s dotglob
alias ls='ls --hyperlink=auto --group-directories-first --color --human-readable'
alias sc='wl-copy'
alias asciify="perl -pe 's/[^[:ascii:]]//g'"

cheat() {
  curl cheat.sh/"$1"
}
a() {
  if [ $# -eq 0 ]; then
    abduco
    return
  fi

  abduco -A "$1" "$1"
}
spwd() {
  echo $(whoami)@$(hostname):$(pwd)
}
